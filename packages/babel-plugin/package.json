{
  "name": "@grafoo/babel-plugin",
  "version": "0.0.1-alpha.3",
  "description": "the grafoo client babel plugin",
  "repository": "https://github.com/grafoojs/grafoo/tree/master/packages/babel-plugin",
  "main": "dist/index.js",
  "author": "malbernaz<albernazmiguel@gmail.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepare": "babel src --out-dir dist",
    "test": "jest",
    "test:coverage": "jest --coverage && codecov"
  },
  "dependencies": {
    "babel-literal-to-ast": "^2.0.0",
    "babel-plugin-tester": "^5.0.0",
    "graphql": "^0.13.1",
    "graphql-query-compress": "^1.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx|js)$": "<rootDir>/../../scripts/jest-setup.js"
    }
  }
}
