{
  "private": true,
  "name": "grafoo",
  "version": "0.0.1",
  "description": "a graphql client and toolkit",
  "main": "index.js",
  "repository": "https://github.com/malbernaz/grafoo.git",
  "author": "malbernaz <albernazmiguel@gmail.com>",
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "test": "lerna run test",
    "prepare": "node scripts/build.js",
    "clean": "rimraf packages/**/dist",
    "prepush": "yarn test",
    "precommit": "lint-staged"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "ignore": [
      "examples/**/*"
    ],
    "linters": {
      "**/*.js": [
        "eslint",
        "git add"
      ],
      "**/*.{ts,tsx}": [
        "tslint",
        "git add"
      ],
      "**/*.{js,ts,tsx,json,graphql,md}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "prettier": {
    "printWidth": 100
  },
  "devDependencies": {
    "@babel/cli": "7.0.0-beta.47",
    "@babel/core": "7.0.0-beta.47",
    "@babel/plugin-transform-typescript": "7.0.0-beta.47",
    "@babel/preset-env": "7.0.0-beta.47",
    "@babel/preset-react": "7.0.0-beta.47",
    "@babel/preset-typescript": "7.0.0-beta.47",
    "@babel/register": "7.0.0-beta.47",
    "@types/jest": "^22.2.3",
    "@types/lowdb": "^1.0.1",
    "@types/node": "^10.0.6",
    "babel-eslint": "^8.2.3",
    "babel-plugin-jsx-pragmatic": "^1.0.2",
    "casual": "^1.5.19",
    "eslint": "^4.19.0",
    "eslint-plugin-import": "^2.9.0",
    "fetch-mock": "^6.3.0",
    "graphql": "^0.13.2",
    "graphql-tools": "^2.23.1",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lerna": "^3.0.0-beta.19",
    "lint-staged": "^7.1.0",
    "lowdb": "^1.0.0",
    "mri": "^1.1.1",
    "node-fetch": "^2.1.2",
    "preact": "^8.2.9",
    "preact-render-spy": "^1.2.2",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.59.4",
    "rollup-plugin-babel": "^4.0.0-beta.4",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-filesize": "^1.5.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-terser": "^1.0.1",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.12.0",
    "typescript": "^2.8.3",
    "uuid": "^3.2.1"
  }
}
